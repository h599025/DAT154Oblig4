@model BookingSystem.Models.Customer
@{
    ViewData["Title"] = "Log In";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://media.istockphoto.com/vectors/female-traveller-with-backpack-and-suitcase-and-male-receptionist-on-vector-id1151387992?k=20&m=1151387992&s=612x612&w=0&h=_bXViOThSozNHi2E9a6hR7UOkGAa-kRbvkuqAvd5I_I="
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log In</p>

                <div class="text-center text-lg-start mb-3">
                    <p class="small fw-bold mt-2 pt-1 mb-0 text-danger"> @ViewData["Message"]</p>
                </div>

                <form method="post" asp-controller="home" asp-action="Login">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" asp-for="Email" class="form-control form-control-lg"
                               placeholder="Email" value=@((@Model==null)?"":@Model.Email)  />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="password" asp-for="Password" class="form-control form-control-lg"
                               placeholder="Password"  />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-area=""  asp-controller="Home" asp-action="Register" class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>